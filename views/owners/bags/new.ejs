<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Owner suprise bag creation</title>
</head>
<body>
    <h1>Owner suprise bag creation page.</h1>
    <!-- store name, address, GPS location, descritpion, ingredients & allergens, meal type, orginal price, discount price, and average weight -->

    <form method="POST">
        <div>
            <label for="name">Name</label>
            <input type="text" id="name" name="name">
        </div>
        <div>
            <label for="address">Address</label>
            <input type="text" id="address" name="address">
        </div>
        <div>
            <label for="latitude">Latitude</label>
            <input type="number" id="latitude" name="latitude">
        </div>
        <div>
            <label for="longitude">Longitude</label>
            <input type="number" id="longitude" name="longitude">
        </div>
        <div>
            <label for="descritpion">Descritpion</label>
            <input type="text" id="descritpion" name="descritpion">
        </div>
        <div>
            <label for="ingredients">Ingredients & Allergens</label>
            <input type="text" id="ingredients" name="ingredients">
        </div>
        <div>
            <label for="type">Meal Type</label>
            <input type="text" id="type" name="type">
        </div>
        <div>
            <label for="originalPrice">Orginal Price</label>
            <input type="number" id="originalPrice" name="originalPrice">
        </div>
        <div>
            <label for="discountPrice">Discount Price</label>
            <input type="number" id="discountPrice" name="discountPrice">
        </div>
        <div>
            <label for="weight">Weight</label>
            <input type="number" id="weight" name="weight">
        </div>
        <div>
            <button>Create Surprise</button>
        </div>
    </form>
    <div>
        <button onClick="window.location.href='/';">return to homepage</button>
    </div>
</body>
</html>